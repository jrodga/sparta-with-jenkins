pipeline {
  agent any

  environment {
    IMAGE_NAME = "sparta-app"
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Docker Image') {
      steps {
        dir('app') {
          sh 'docker build -t jrodga1604/sparta-app .'
        }
      }
    }

  }
}
