pipeline {
    agent any

    environment {
        IMAGE_NAME = "jrodga1604/sparta-app"
        DOCKER_CREDS = "dockerhub-creds"
        EC2_IP = "63.33.64.20"
    }

    stages {

        stage('Build & Push Docker Image') {
            steps {
                dir('app') {
                    sh """
                        docker buildx inspect multi-builder || docker buildx create --use --name multi-builder
                        docker buildx use multi-builder
                        docker buildx build \
                        --platform linux/amd64 \
                        -t $IMAGE_NAME:${BUILD_NUMBER} \
                        -t $IMAGE_NAME:latest \
                        --push .
                    """
                }
            }
        }

        stage('Deploy to EC2 (Main Only)') {
            when {
                branch 'main'
            }
            steps {
                sshagent(['ec2-ssh']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ubuntu@${EC2_HOST} "

                            docker pull $IMAGE_NAME:latest &&
                            docker stop sparta || true &&
                            docker rm sparta || true &&
                            docker run -d -p 80:3000 --name sparta $IMAGE_NAME:latest
                        "
                    """
                }
            }
        }
    }
}
